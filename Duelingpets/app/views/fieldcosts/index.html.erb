<% provide(:h1, "Fieldcost List") %>
<% if @fieldcosts.count >= 10 %>
   <div class="formlinks"><%= paginate @fieldcosts %></div>
   <br>
<% end %>
<% @fieldcosts.each do |fieldcost| %>
   <div class="pageformat">
      <div class="container"><p>Name: <%= fieldcost.name %></p></div> <div class="container"><%= button_to 'Edit', edit_dragonhoard_fieldcost_path(fieldcost.dragonhoard, fieldcost), method: :get, class: "button editbutton" %></div>
      <div class="container">Amount: <%= fieldcost.amount %></div> <div class="container"><%= button_to "Increase", fieldcosts_increase_path(fieldcost), method: :post, class: "button editbutton" %></div> <div class="container"><%= button_to "Decrease", fieldcosts_decrease_path(fieldcost), method: :post, class: "button destroybutton" %></div>
      <br>
      <p>Econtype: <%= fieldcost.econtype %></p>
      <p>Baseinc: <%= fieldcost.baseinc.name %></p>
      <p>Dragonhoard: <%= fieldcost.dragonhoard_id %></p>
      <br>
      <p>Created: <%= distance_of_time_in_words_to_now fieldcost.created_on %> ago on (<%= fieldcost.created_on.strftime("%B-%d-%Y") %>)</p>
      <p>Updated: <%= distance_of_time_in_words_to_now fieldcost.updated_on %> ago on (<%= fieldcost.updated_on.strftime("%B-%d-%Y") %>)</p>
   </div>
   <br>
<% end %>
<p class="formlinks"><%= link_to 'Back', dragonhoards_path %></p>
