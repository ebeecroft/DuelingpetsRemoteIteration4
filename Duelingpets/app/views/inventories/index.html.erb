<% provide(:h1, "Inventory List") %>
<% if @inventories.count >= 10 %>
   <div class="formlinks"><%= paginate @inventories %></div>
   <br>
<% end %>
<% @inventories.each do |inventory| %>
   <div class="pageformat">
      <% if inventory.user.userinfo.miniavatar.to_s != "" %>
         <p><%= image_tag(inventory.user.userinfo.miniavatar_url(:thumb)) %></p>
      <% end %>
      <p>Owner: <%= getUserPrivilege(inventory.user) %><%= link_to inventory.user.vname, user_path(inventory.user) %></p>
      <p>Status: <%= getActivity(inventory.user) %>
         <% if getActivity(inventory.user) != "Online" && getActivity(inventory.user) != "Inoperable" %>
            for <%= distance_of_time_in_words_to_now getTime(inventory.user) %>
         <% end %>
      </p>
   </div>
   <br>
<% end %>
<p class="formlinks"><%= link_to 'Back', root_path %></p>
