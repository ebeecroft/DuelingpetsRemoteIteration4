<% provide(:h1, "Login") %>
<% provide(:canonical, "http://www.duelingpets.net/login") %>
<% provide(:alternate, "http://www.duelingpets.net/login/") %>
<% provide(:description, "Duelingpets Login allows you to access the site.") %>
<div class="pageformat">
   <p><%= image_tag(@artpage.art_url(:thumb)) %></p>
   <p class="textindent"><%= textFormater("Multi", @artpage.message, "All").html_safe %></p>
</div>
<br>
<div class="pageformat">
   <%= form_for(:session, url: loginpost_path) do |f| %>
      <p><%= f.label :login_id, "Login Name" %></p>
      <p><%= f.password_field :login_id %></p>
      <p><%= f.label :password %></p>
      <p><%= f.password_field :password %></p>
      <p><%= f.submit "Login", class: "button submitbutton" %></p>
   <% end %>
</div>
<br>
<div class="pageformat">
   <p class="formlinks">New User? <%= link_to "Register now!", register_path  %></p>
   <p class="formlinks">New Account? <%= link_to "Activate now!", activate_path %></p>
   <p class="formlinks">Forgot Password? <%= link_to "Forgot Password", recover_path %></p>
   <br>
   <p class="formlinks"><%= link_to 'Back', root_path %></p>
</div>
