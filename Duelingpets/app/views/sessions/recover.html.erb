<% provide(:h1, "Recover Password") %>
<div class="pageformat">
   <p><%= image_tag(@artpage.art_url(:thumb)) %></p>
   <p class="textindent"><%= textFormater("Multi", @artpage.message, "All").html_safe %></p>
</div>
<br>
<div class="pageformat">
   <%= form_for(:session, url: recoverpost_path) do |f| %>
      <p><%= f.label :login_id, "Login Name" %></p>
      <p><%= f.password_field :login_id %></p>
      <p><%= f.label :vname, "Virtual Name" %></p>
      <p><%= f.password_field :vname %></p>
      <p><%= f.submit "Reset", class: "button submitbutton" %></p>
   <% end %>
</div>
<br>
<div class="pageformat">
   <p class="formlinks">AltEmailRecovery? <%= link_to "Alternate Email!", altemail_path %></p>
   <br>
   <p class="formlinks"><%= link_to "Back", root_path %></p>
</div>
